<%= simple_form_for object do |f| %>
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">
        <%= Leader.model_name.human %>
      </h3>
    </div>
    <div class="box-body">
      <%= f.simple_fields_for :user do |user| %>
        <%= render 'shared/user_fields', f: user %>
      <% end %>
    </div>
  </div>



  <div class="box box-primary address nested-fields">
  <div class="box-header with-border">
    <h3 class="box-title">
       Outros dados 
    </h3>
  </div>
  <div class="box-body">
    <div class="row ">
    <%= f.input :mother_name, wrapper_html: { class: 'col-md-4' } %>
    <%= f.input :father_name, wrapper_html: { class: 'col-md-4' } %>      
    <%= f.input :rg, wrapper_html: { class: 'col-lg-4' } %> 
    <%= f.input :cpf, input_html: {id: "cpf"},  wrapper_html: { class: 'col-lg-4'}  %>          
    </div>
  </div>
</div>

 
  

  <%= f.simple_fields_for :address do |address| %>
    <%= render 'shared/address_fields', f: address %>
  <% end %> 

   
   <div class="row user nested-fields">
    <div class="tab-pane" id="tab_2">
      
    </div>
   </div>  

  <div class="box box-primary">
    <div class="box-footer">
      <%= link_to t('.back', default: t("helpers.links.back")), leaders_path, class: 'btn btn-default'  %>
      <%= f.submit  t('.save', default: t("helpers.links.save")), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
