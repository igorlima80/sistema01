<div class="box box-solid">
  <div class="box-header with-border">
    <h3 class="box-title">Linha do tempo</h3>
  </div>
  <div class="box-body">
    <ul class="timeline timeline-inverse">
      <!-- timeline time label -->
      <% data = Date.today %>
      <li class="time-label">
        <span class="bg-black">
          <%= l data, format: :date %>
        </span>
      </li>
      <!-- /.timeline-label -->

      <% list.each do |key, value| %>
        <!-- timeline time label -->
        <% if data != key %>
          <% data = key %>
          <li class="time-label">
            <span class="bg-gray">
              <%= l key, format: :date %>
            </span>
          </li>
        <% end %>
        <!-- /.timeline-label -->
        <li class='timeline <%= value[:kind] %>'>
          <i class="fa <%= value[:icon] %> <%= value[:color] %>"></i>

          <!-- timeline item -->
          <div class="timeline-item">
            <span class="time"><i class="fa fa-clock-o"></i> <%= l key, format: :time %></span>

            <h3 class="timeline-header">
              <a href="#"><%= value[:message] %></a> 
            </h3>

            <% if value[:body] %>
              <div class="timeline-body">
                <%= value[:body].html_safe %>
              </div>
            <% end %>
          </div>
          <!-- /.timeline item -->
        </li>
      <% end %>
      <!-- END timeline item -->
      <li>
        <i class="fa fa-clock-o bg-gray"></i>
      </li>
    </ul>

  </div>
</div> 